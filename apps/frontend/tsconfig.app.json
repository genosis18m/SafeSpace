{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2023"], // ðŸ‘ˆ This is crucial
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx", // ðŸ‘ˆ Correct JSX setting for React 17+

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vite.config.ts"]
}
